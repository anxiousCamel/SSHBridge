{
  "compilerOptions": {
    // Layout
    "rootDir": "src",
    "outDir": "dist",

    // Módulos/Alvo
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"],

    // Integração Node/JS
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Geração de artefatos
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Tipagem
    "strict": true,
    "skipLibCheck": true,

    // IMPORTANTE para acabar com os erros mostrados
    "verbatimModuleSyntax": false,
    "isolatedModules": false,

    // Qualidade extra (opcional; comente se atrapalhar)
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"]
}
